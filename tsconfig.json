{
    "compilerOptions": {
      "target": "es2017",
      "module": "esnext",
      "lib": [
        "es2015", "es2016", "es2017", "esnext.asynciterable"
      ],
  
      "sourceMap": true,
  
      "strict": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
  
      "moduleResolution": "node",
      "esModuleInterop": true,
      "noImplicitAny": false
    },
    "include": [
      "src/**/*",
      "test/**/*",
      "types/**/*",
    ] 
  }
  